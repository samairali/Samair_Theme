<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
      <css src="Samair_Slider::css/slider.css"/>
	  <css src="Samair_Slider::css/marquee.css"/>

	</head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" template="Samair_Slider::slider.phtml" name="home-slider" />
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" template="Samair_Slider::marquee.phtml" name="marquee-slider" after="home-slider" />
        </referenceContainer>
    </body>
</page>